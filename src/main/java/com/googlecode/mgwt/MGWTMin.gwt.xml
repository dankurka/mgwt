<module>
    <!--
       This module includes all the stuff necessary to use mgwt.
       
       Inheriting this module instead of the default one will reduce
       the number of permutations in your project discarding death ones.

       @see http://code.google.com/p/mgwt/issues/detail?id=215
    -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name='com.googlecode.mgwt.dom.DOM'/>
    <inherits name='com.googlecode.mgwt.storage.Storage'/>
    <inherits name='com.googlecode.mgwt.ui.UI'/>
    <inherits name='com.googlecode.mgwt.mvp.MVP'/>
</module>